{
  "layer": "top",
  "position": "top",
  "height": 40,
  "background-color": "#00000000",
  "color": "#ffffff",
  "modules-left": ["hyprland/workspaces"],
  "modules-center": ["hyprland/window"],
   "modules-right": [
    "mpris",
    "pulseaudio",
    "custom/language",
    "battery",
    "network",
    "custom/wofi",
    "clock"
  ],

  "mpris": {
    "format": "{artist} - {title}",
    "scroll": true,
    "max-length": 40,
    "interval": 1
  },

  "custom/language": {
    "exec": "~/.dotfiles/home-manager/modules/waybar/scripts/language.sh",
    "return-type": "json",
    "interval": 1
  },

  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "active": "ÔÑë",
      "default": "ÔÑë",
      "empty": "ÔÑë"
